<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/margin_quarter"
    android:paddingTop="@dimen/margin_half"
    android:paddingEnd="@dimen/margin_quarter">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editlocation_location_layout"
        style="@style/onboarding_edittextlayout"
        android:hint="@string/dialog_editlocation_name">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editlocation_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:importantForAutofill="no"
            android:lines="1"
            android:textColor="@color/textinput_text"
            android:textColorHighlight="@color/text_primary_disabled"
            android:textCursorDrawable="@drawable/edittext_cursor"
            tools:targetApi="O" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editlocation_latitude_layout"
        style="@style/onboarding_edittextlayout"
        android:hint="@string/dialog_editlocation_latitude">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editlocation_latitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:importantForAutofill="no"
            android:inputType="numberSigned|numberDecimal"
            android:lines="1"
            android:textColor="@color/textinput_text"
            android:textColorHighlight="@color/text_primary_disabled"
            android:textCursorDrawable="@drawable/edittext_cursor"
            tools:targetApi="O" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editlocation_longitude_layout"
        style="@style/onboarding_edittextlayout"
        android:hint="@string/dialog_editlocation_longitude">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editlocation_longitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:importantForAutofill="no"
            android:inputType="numberSigned|numberDecimal"
            android:lines="1"
            android:textColor="@color/textinput_text"
            android:textColorHighlight="@color/text_primary_disabled"
            android:textCursorDrawable="@drawable/edittext_cursor"
            tools:targetApi="O" />
    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>